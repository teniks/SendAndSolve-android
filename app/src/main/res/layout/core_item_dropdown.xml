<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/dropdown_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/dropdown_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_main"
        android:maxLines="@integer/dropdown_text_max_lines"
        app:layout_constraintStart_toEndOf="@id/dropdown_icon"
        app:layout_constraintTop_toTopOf="@id/dropdown_icon"
        app:layout_constraintBottom_toBottomOf="@id/dropdown_icon"/>
</androidx.constraintlayout.widget.ConstraintLayout>